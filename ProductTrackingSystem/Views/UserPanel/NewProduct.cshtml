@model ProductTrackingSystem.Entities.Concrete.Product

@{
    ViewBag.Title = "NewProduct";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<h2>Yeni Ürün Ekleme Sayfası</h2>
<br />
@using (Html.BeginForm("AddProduct", "Product", FormMethod.Post))
{
    <div class="form-group">
        @Html.Label("Ürün Adı")
        @Html.TextBoxFor(x => x.ProductName, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.ProductName)
        <br />
        @Html.Label("Stok Miktarı")
        @Html.TextBoxFor(x => x.UnitsInStock, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.UnitsInStock)
        <br />
        @Html.Label("Birim Fiyatı")
        @Html.TextBoxFor(x => x.UnitPrice, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.UnitPrice)
        <br />
        @Html.Label("Kategori")
        @Html.DropDownListFor(x => x.CategoryId, (List<SelectListItem>)ViewBag.vc, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.CategoryId)
        <br />
        <button class="btn btn-info">Ürün Ekle</button>
    </div>
}


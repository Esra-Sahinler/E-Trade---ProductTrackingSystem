@using ProductTrackingSystem.Entities.Concrete
@using PagedList
@using PagedList.Mvc
@model PagedList.IPagedList<Comment>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Index</h2>
<br />
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Açıklama</th>
        <th>Tarih</th>
        <th>Kullanıcı</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.CommentId</td>
            <td>@item.Description</td>
            <td>@item.Date</td>
            <td>@item.User.Name @item.User.Surname</td>
        </tr>
    }
</table>
<br />
<a href="/Comment/AddComment" class="btn btn-info">Yeni Yorum Ekle</a>
<br />
<br />
@Html.PagedListPager((IPagedList)Model, p => Url.Action("Index", new { p }), new PagedListRenderOptions
{
    LiElementClasses = new List<string>
    {"page-link"}
})
@model ProductTrackingSystem.Entities.Concrete.Cart

@{
    ViewBag.Title = "Buy";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="modal-header">
    <h2>Satın Alma Sayfası</h2>
</div>
<div class="container">
    @using (Html.BeginForm("Buys", "Sales", FormMethod.Post))
    {
        <div class="modal-body">
            @Html.HiddenFor(x => x.CartId)
            <div class="form-group">
                Kullanıcı Adı Soyadı: @Html.DisplayFor(x => x.User.Name, new { @class = "form-control" })
            </div>
            <div class="form-group">
                Ürün Adı: @Html.DisplayFor(x => x.Product.ProductName, new { @class = "form-control" })
            </div>
            <div class="form-group">
                Birim Fiyatı: @Html.DisplayFor(x => x.UnitPrice, new { @class = "form-control" })
            </div>
            <div class="form-group">
                Miktarı: @Html.DisplayFor(x => x.Quantity, new { @class = "form-control" })
            </div>
            <div class="form-group text-center" style="font-size:22px; color:red">
                Toplam Fiyat: @Html.DisplayFor(x => x.TotalPrice, new { @class = "form-control" })
            </div>
        </div>
        <div class="modal-footer" style="float:right">
            <button class="btn btn-success">Satın Al</button>
            <a href="/ShoppingCart/Index/" class="btn btn-warning">Geri Dön</a>
        </div>

    }
</div>

